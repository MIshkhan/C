int V;
vector<list<int>> list;

bool is_connected() {
  bool visited[i];
  for (int i = 0; i < V; i++) {
    visited[i] = false;
  }
  bfs(0, visited);
  for (int i = 0; i < V; i++) {
    if (visited[i] == false) {
      return false;
    }
  }
  return true;
}

void bfs(int v, bool visited[]) {
  visited[v] = true;
  queue<int> q;
  q.push(v);

  while (!q.empty()) {
    v = q.front();
    q.pop();
    for (list<int>::iterator i = list[v].begin(); i != list[v].end(); i++) {
      if (visited[*i] == false) {
        visited[*i] = true;
        q.push(*i);
      }
    }
  }
}